{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compose",
      "type": "shell",
      "command": ["docker", "compose", "up", "-d"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "revealProblems": "onProblem",
        "close": true
      },
      "dependsOn": [
        "copie_i18n",
        "copie_cinema"
      ]
    },
    {
      "label": "docker_clean",
      "type": "shell",
      "windows": {
        "command": ["docker", "rm", "-f", "postgresql", "&&",
                    "docker", "volume", "rm", "cinema_postgraphile_postgresql_data", "&&"
                    "del", ".\\postgresql\\tmp\\*.csv", "&&"
                    "del", ".\\postgresql\\initdb.d\\*.sql",
        ]
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "copie_i18n",
      "type": "shell",
      "windows": {
        "command": ["copy", "c:\\data\\i18n_data\\data\\*.csv", ".\\postgresql\\tmp", "&&",
                    "copy", "c:\\data\\i18n_data\\postgresql\\initdb.d", ".\\postgresql\\initdb.d", "&&",
                    "copy", "c:\\data\\auth_data\\data\\*.csv", ".\\postgresql\\tmp", "&&",
                    "copy", "c:\\data\\auth_data\\postgresql\\initdb.d", ".\\postgresql\\initdb.d"
        ]
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "label": "copie_cinema",
      "type": "shell",
      "windows": {
        "command": ["copy", "c:\\data\\cinema_data\\data\\*.csv", ".\\postgresql\\tmp", "&&",
                    "copy", "c:\\data\\cinema_data\\postgresql\\initdb.d", ".\\postgresql\\initdb.d"
        ]
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      }
    }
  ]
}
